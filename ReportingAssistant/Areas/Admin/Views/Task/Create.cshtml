@{
    ViewBag.Title = "NewTask";

}

    <form class="mt-5" action="/Admin/Task/Create" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-6">
                <label>Screen</label>
                <input class="form-control" type="text" placeholder="Screen" name="Screen" />
            </div>
            <div class="form-group col-6">
                <label>Project</label>
                <select class="form-control" name="ProjectID">
                    <option disabled selected>Select Projects</option>
                    @foreach (var item in ViewBag.Projects)
                    {

                <option value="@item.ProjectID">@item.ProjectName</option>
                    }
                </select>
            </div>
            <div class="form-group col-6">
                <label>Assign to</label>
                <select class="form-control" name="UserID">
                    <option disabled selected>Select User</option>
                    @foreach (var item in ViewBag.User)
                    {
                        <option value="@item.UserID">@item.UserName</option>
                    }
                </select>
            </div>

            <div class="form-group col-6">
                <label>Attachment</label>
                <input type="file" placeholder="Attachment" class="form-control" name="Attachments" />
            </div>
            <div class="form-group col-6">
                <label>Task Description</label>
                <textarea class="form-control" type="text" placeholder="Task Description" name="TaskDescription"></textarea>
            </div>
        </div>
        <button class="btn MySelector" type="submit">CREATE</button>
    </form>
@Html.ValidationSummary();