@model ReportingAssistant.ViewModel.TaskViewModel
@{
    ViewBag.Title = "EditTask";
}

<form class="mt-5" action="/Admin/Task/Edit" method="post" enctype="multipart/form-data">
    <div class="form-row">
        @Html.HiddenFor(temp=>temp.TaskID)
        <div class="form-group col-6">
            <label>Screen</label>
            <input class="form-control" type="text" placeholder="Screen" value="@Model.Screen" name="Screen" />
        </div>
        <div class="form-group col-6">
            <label>Project</label>
            <select class="form-control" name="ProjectID">
                <option disabled selected>Select Projects</option>
                @foreach (var item in ViewBag.Projects)
                {
                    if (Model.ProjectID == item.ProjectID)
                    {
                    <option selected value="@item.ProjectID">@item.ProjectName</option>
                    }
                    else
                    {
                     <option value="@item.ProjectID">@item.ProjectName</option>
                    }
                }
            </select>
        </div>
        <div class="form-group col-6">
            <label>Assign to</label>
            <select class="form-control" name="UserID">
                <option disabled selected>Select User</option>
                @foreach (var item in ViewBag.User)
                {
                    if (Model.UserID == item.UserID)
                    {
                        <option selected value="@item.UserID">@item.UserName</option>
                    }
                    else
                    {
                        <option value="@item.UserID">@item.UserName</option>
                    }

                }
            </select>
        </div>

        <div class="form-group col-6">
            <label>Attachment</label>
            <input type="file" value="@Model.Attachments" placeholder="Attachment" class="form-control" name="Attachments" />
        </div>
        <div class="form-group col-6">
            <label>Task Description</label>
            <textarea class="form-control" type="text" placeholder="Task Description" name="TaskDescription">@Model.TaskDescription</textarea>
        </div>
    </div>
    <button class="btn MySelector" type="submit">SAVE</button>
</form>
@Html.ValidationSummary();