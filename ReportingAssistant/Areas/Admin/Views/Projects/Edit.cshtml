@model ReportingAssistant.ViewModel.ProjectViewModel
@{
    ViewBag.Title = "Edit Project";
}

<form class="mt-5" action="/Admin/Projects/Edit/@Model.ProjectID" method="post" enctype="multipart/form-data">
    <div class="form-row">
        @Html.HiddenFor(temp => temp.ProjectID)
        <div class="form-group col-6">
            <label>Project Name</label>
            <input class="form-control" type="text" placeholder="Project Name" value="@Model.ProjectName" name="ProjectName" />
        </div>
        <div class="form-group col-6">
            <label>Category</label>
            <select class="form-control" name="CategoryID">
                <option disabled selected>Select Categories</option>
                @foreach (var item in ViewBag.Categories)
                {
                    if (item.CategoryID == Model.CategoryID)
                    {
                        <option value="@item.CategoryID" selected>@item.CategoryName</option>
                    }
                    else
                    {
                        <option value="@item.CategoryID">@item.CategoryName</option>
                    }

                }
            </select>
        </div>
        <div class="form-group col-6">
            <label>Availability Status</label>
            <select class="form-control" name="AvailabilityStatus">
                <option disabled selected>Availability Status</option>
                @if (Model.AvailabilityStatus == "Available")
                {
                    <option selected>Available</option>
                    <option>Not Available</option>
                }
                @if (Model.AvailabilityStatus == "Not Available")
                {
                    <option>Available</option>
                    <option>Not Available</option>
                }
            </select>
        </div>
        <div class="form-group col-6">
            <label>Attachment</label>
            <div class="row">

                <div class="col-10">
                    <input type="file" placeholder="Attachment" value="" class="form-control" name="Attachments" />
                </div>
                <div class="col-2">
                    <img src="data:image;base64,@Model.Attachments" style="width:60px" />
                </div>
            </div>
        </div>
        <button class="btn MySelector" type="submit">SAVE</button>
    </div>
</form>

@Html.ValidationSummary()